{
  "manifest_version": 3,
  "name": "考试倒计时壁纸生成器",
  "description": "生成考试倒计时壁纸,每日自动更新",
  "version": "1.0",
  "permissions": [
    "storage",
    "downloads",
    "alarms"
  ],
  "host_permissions": [],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 